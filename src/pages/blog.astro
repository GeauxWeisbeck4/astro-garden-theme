---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob('../content/posts/*.md');
---

<BaseLayout description="This is the blog page for Astro Garden Theme." title="Astro Garden Theme Blog">
    <h1>Astro Garden Theme Blog</h1>
    <p>This is where you will find content that I created for the Astro Garden Theme.</p>
    <ul>
        {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
    </ul>
</BaseLayout>